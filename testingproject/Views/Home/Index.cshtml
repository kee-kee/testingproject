<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body style="background-color:#FFF9EAFF; font-family: 'Press Start 2P'">
    <div>
        <br />
        <h2 style="font-size:40px; text-align:center">WELCOME TO</h2>
        <div class="row" style="padding-left:10px">
            <div class="col-md-5" style="margin-left: -100px">
                <img src="~/images/pacman.gif">
            </div>
            <div class="col-md-7">
                <h1 style="font-size:6vw; padding-top:200px;font-family: 'Press Start 2P'"><marquee>StudyBolt</marquee></h1>
            </div>
        </div>
        <br />
        <p style="font-size: 14px; text-align:center">A conducive place for you to study with new friends from around the world!</p>
    </div>
    <br />

    <div style="text-align:center" class="container">
        <div class="row">
            <div class="col-sm-7" style="align-items:center">
                <h4><u>What's In?</u></h4>
                <h6>Discord Bot</h6>
                <p style="font-size:12px">We have a discord bot so you can have access to your notes anywhere, anytime! See more about our bot <a href="~/Home/AboutBot">here</a>!</p>
                <h6>Class Videos and Notes</h6>
                <p style="font-size:12px">Notes and Videos uploaded by your school teachers!</p>
                <h6>Discussion Space</h6>
                <p style="font-size:12px">Dicuss and make friends in our discussion space!</p>
            </div>
            <div class="col-sm-5">
                <main>
                    <div class="carousel slide carousel-fade" id="featured" data-ride="carousel" data-interval="5000">
                        <ol class="carousel-indicators">
                            <li data-target="#featured" data-slide-to="0"></li>
                            <li data-target="#featured" data-slide-to="1"></li>
                            <li data-target="#featured" data-slide-to="2"></li>

                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/images/robot.jpg" alt="Robot">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/images/teacher.jpg" alt="Teacher">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/images/grp.jpg" alt="Group Dicussion">
                            </div>

                        </div>
                        <a class="carousel-control-prev" href="#featured" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true">
                                <span class="sr-only">Previous</span>
                            </span>
                        </a>
                        <a class="carousel-control-next" href="#featured" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true">
                                <span class="sr-only">Next</span>
                            </span>
                        </a>
                    </div>
                </main>
            </div>
        </div>
    </div>

</body>
</html>