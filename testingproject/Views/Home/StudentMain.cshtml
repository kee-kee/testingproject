
@{
    ViewData["Title"] = "StudentMain";
    Layout = "_StudentHeader";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />
    <link rel="stylesheet" type="text/css" href="~/css/studentmain.css" />

</head>
<body style="background-color:#FFF9EAFF; font-family: 'Press Start 2P'">
    <h1 style="text-align:center">WELCOME,Student!</h1>
    @*<br />
    <h4>Work Hard,Play Hard. </h4>*@
    <div>
        <main>
            <div class="carousel slide carousel-fade" id="featured" data-ride="carousel" data-interval="5000">
                <ol class="carousel-indicators">
                    <li data-target="#featured" data-slide-to="0"></li>
                    <li data-target="#featured" data-slide-to="1"></li>
                    <li data-target="#featured" data-slide-to="2"></li>

                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/walking.jpg" alt="Aeroplane" height="50%">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/kids.jpg" alt="Flight Attendant" height="50%">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/book.png" alt="New York City" height="50%">
                    </div>

                </div>
                <a class="carousel-control-prev" href="#featured" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true">
                        <span class="sr-only">Previous</span>
                    </span>
                </a>
                <a class="carousel-control-next" href="#featured" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true">
                        <span class="sr-only">Next</span>
                    </span>
                </a>
            </div>
        </main>
    </div>
    @*<br />*@
    <div class="row">
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="~/images/golbe.jpg" alt="Straits Times" class="image">
                <div class="caption">
                    <p>Read news about the world!</p>
                </div>
                <div class="middle">
                    <div class="text"><a href="https://www.straitstimes.com/" target="_blank">Go</a></div>
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="thumbnail">
                <img src="~/images/tutor.jpg" alt="Download" class="image"> 
                <div class="caption">
                    <p>Download some lessons!</p>
                </div>
                <div class="middle">
                    <div class="text"><a href="~/Student/Download">Go</a></div>
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="thumbnail">
                <img src="~/images/friends.jpeg" alt="Discussion Space" class="image">
                <div class="caption">
                    <p>Make some new friends!</p>
                </div>
                <div class="middle">
                    <div class="text"><a href="~/Student/Community">Go</a></div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="thumbnail">
                <img src="~/images/discord2.png" alt="Discord Bot" class="image">
                <div class="caption">
                    <p>Download our discord bot!</p>
                </div>
                <div class="middle">
                    <div class="text"><a href="https://discord.com/oauth2/authorize?client_id=769019538254594139&scope=bot&permissions=2146958847" target="_blank">Go</a></div>
                </div>

            </div>
        </div>
    </div>


</body>
</html>

